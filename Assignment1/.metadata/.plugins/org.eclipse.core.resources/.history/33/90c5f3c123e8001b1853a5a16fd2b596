public class PublicTransportation {
	private double ticketPrice;
	private int numberOfStops;

	public PublicTransportation() // Constructors
	{
		ticketPrice = 0;
		numberOfStops = 0;
	}

	public PublicTransportation(double ticketPrice, int numberOfStops) {
		this.ticketPrice = ticketPrice;
		this.numberOfStops = numberOfStops;
	}
	// copy constructor

	public PublicTransportation(PublicTransportation PB) {
		ticketPrice = PB.ticketPrice;
		numberOfStops = PB.numberOfStops;
	}

	public String toString() // toString Method
	{
		return "The total travel is going to cost " + ticketPrice + " and it is going to have " + numberOfStops
				+ " stops.";
	}

	public boolean ticketPrice(PublicTransportation PublicTransportation) {
		if (ticketPrice == PublicTransportation.ticketPrice && numberOfStops == PublicTransportation.numberOfStops)
			return true;
		return false;
	}
}
