public class CityBus extends PublicTransportation{

	private long routenumber;
	private int opyear;
	private String linename;
	private String drivername;
	
	public CityBus() //initialization 
	{
		super();
		routenumber=0;
		opyear=0;
		linename=null;
		drivername=null;
	}
	public CityBus(double ticketprice, int numberofstops, long routenumber, int opyear, String linename, String drivername) //parametrization
	{
		super(ticketprice,numberofstops);
		this.routenumber=routenumber;
		this.opyear=opyear;
		this.linename=linename;
		this.drivername=drivername;
	}
	public CityBus(CityBus CB) //copyconstructor
	{
		super(CB);
		routenumber=CB.routenumber;
		opyear=CB.opyear;
		linename=CB.linename;
		drivername=CB.drivername;
	}
	public long getroutenumber()
	{
		return routenumber;
	}
	public int getopyear()
	{
		return opyear;
	}
	public String getlinename()
	{
		return linename;
	}
	public String getdrivername() //Accessors
	{
		return drivername;
	}
	public void setroutenumber(long routenumber)
	{
		this.routenumber=routenumber;
	}
	public void setopyear(int opyear)
	{
		this.opyear=opyear;
	}
	public void setlinename(String linename)
	{
		this.linename=linename;
	}
	public void setdrivername(String drivername)//mutators
	{
		this.drivername=drivername;
	}
	public String toString()
	{
		return "This is CityBus no."+routenumber+" which started operation on year "+opyear+" named "+ linename +", which is conducted by "+drivername;
	}
	public boolean equalto(CityBus CityBus)
	{
		if (routenumber == CityBus.routenumber && opyear == CityBus.opyear && linename == CityBus.linename && drivername == CityBus.drivername)
			return true;
		return false;
	}
}

