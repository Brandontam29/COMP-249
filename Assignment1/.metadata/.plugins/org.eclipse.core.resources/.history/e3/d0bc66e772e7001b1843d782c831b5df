public class Metro extends CityBus {

	private int numberofvehicles;
	private String city;

	public Metro() {
		super();
		numberofvehicles = 0;
		city = null;
	}

	public Metro(double ticketprice, int numberofstops, long routenumber, int opyear, String linename,
			String drivername, int numberofvehicles, String city) {
		super(ticketprice, numberofstops, routenumber, opyear, linename, drivername);
		this.numberofvehicles = numberofvehicles;
		this.city = city;
	}

	public Metro(Metro Metro) {
		super(Metro);
		numberofvehicles = Metro.numberofvehicles;
		city = Metro.city;
	}

	public int getnumberofvehicles() {
		return numberofvehicles;
	}

	public String getCity() {
		return city;
	}

	public void setnumberofvehicles(int numberofvehicles) {
		this.numberofvehicles = numberofvehicles;
	}

	public void setCity(String city) {
		this.city = city;
	}

	public String tostring() {
		return "there is a total of " + numberofvehicles + " vehicles in " + city;
	}

	public boolean equalto(Metro Metro) {
		if (numberofvehicles == Metro.numberofvehicles && city == Metro.city)
			return true;
		return false;
	}
}
